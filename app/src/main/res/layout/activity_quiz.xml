<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10sp"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview_score"
            android:fontFamily="monospace"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:layout_gravity="start"
            android:textColor="@color/dark_weird_blue"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:id="@+id/textview_status"
            android:layout_marginRight="10dp"
            android:textSize="15dp"
            android:textColor="@color/dark_weird_blue"/>

    </LinearLayout>


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/roundedbutton"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="50dp"
            android:textColor="@android:color/background_light"
            android:id="@+id/textview_word"
            android:textAlignment="center"
            android:fontFamily="monospace" />
        <TextView
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@android:color/background_light"
            android:text="Choose the best definition."
            android:layout_marginBottom="20dp"
            android:textAlignment="center"
            android:fontFamily="monospace" />
        <TextView
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:textColor="@android:color/background_light"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:id="@+id/textview_first_choice"
            android:textAlignment="center"
            android:background="@drawable/roundedbutton"
            android:onClick="firstChoice"
            android:backgroundTint="#468484"
            android:layout_margin="20sp"
            android:textSize="16sp"
            android:padding="5dp"
            android:fontFamily="monospace"/>
        <TextView
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/background_light"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:id="@+id/textview_second_choice"
            android:textAlignment="center"
            android:background="@drawable/roundedbutton"
            android:onClick="secondChoice"
            android:backgroundTint="#468484"
            android:layout_margin="20sp"
            android:textSize="16sp"
            android:padding="5dp"
            android:fontFamily="monospace"/>
        <TextView
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/background_light"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:id="@+id/textview_third_choice"
            android:textAlignment="center"
            android:background="@drawable/roundedbutton"
            android:onClick="thirdChoice"
            android:backgroundTint="#468484"
            android:layout_margin="20sp"
            android:textSize="16sp"
            android:padding="5dp"
            android:fontFamily="monospace"/>
        <TextView
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:id="@+id/textview_fourth_choice"
            android:textAlignment="center"
            android:background="@drawable/roundedbutton"
            android:onClick="fourthChoice"
            android:backgroundTint="#468484"
            android:layout_margin="20sp"
            android:textSize="16sp"
            android:padding="5dp"
            android:fontFamily="monospace"/>

        <Button
            android:layout_width="60sp"
            android:layout_height="50sp"
            android:background="@drawable/hintbutton"
            android:textColor="@color/white"
            android:id="@+id/quiz_hint_button"
            android:onClick="getHint"
            android:layout_gravity="right"
            android:layout_marginBottom="30sp"
            android:layout_marginRight="10sp" />

    </LinearLayout>

</LinearLayout>